border-1px($color)
  position: relative
  &:after
    display: block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    border-top: 1px solid $color
    content: ' '

border-none()
  &:after
    display: none

bg-image($url)
  background-image: url($url + ".png")

circle($size,$borderColor,$color,$padding)
  width :$size
  height :$size
  line-height :$size
  display :inline-block
  border :1px solid $borderColor
  border-radius :50%
  padding :$padding
  color :$color
